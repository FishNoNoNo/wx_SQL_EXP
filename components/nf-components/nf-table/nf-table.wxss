/* components/nf-components/nf-table/nf-table.wxss */
.table{
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.table-item{
    display: flex;
    width: 100vw;
    max-width: 500px;
    padding: 10px;
    border-bottom: black 1px solid;
}

.table-item-left{
    width: 50%;
}

.table-item-right{
    width: 50%;
    display: flex;
    flex-direction: column;
}