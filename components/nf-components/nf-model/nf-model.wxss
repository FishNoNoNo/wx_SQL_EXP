/* components/nf-components/nf-model/nf-model.wxss */
.mask{
    z-index:99;
    background:rgba(0,0,0,0.6);
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    top: 0;
}

.tip{
    width:300px;
    z-index:100;
    border-radius:10px;
    background-color:#FFF;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}